<tr data-id="{{usuario.id}}" data-matricula="{{usuario.matricula}}">
    <td scope="row">{{usuario.matricula}}</td>
    <td>{{usuario.nome}}</td>

    <td class="text-center">
    {{#if usuario.roles}}
        {{#each usuario.roles}}
            <span class="label label-role label-role-{{name}}">{{name}}</span>
        {{/each}}
    {{/if}}
    </td>

    <td class="text-center">
        <button class="btn btn-default btn-xs edit">
            <i class="fa fa-pencil-square-o"></i> {{lang 'general.edit'}}
        </button>

        <button class="btn btn-danger btn-xs remove">
            <i class="fa fa-remove"></i> {{lang 'general.remove'}}
        </button>
    </td>
</tr>